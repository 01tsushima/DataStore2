<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingHorizontal="16dp"
    android:paddingVertical="20dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mb_proto_datastore"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/proto_datastore"
        app:strokeColor="@color/purple_200" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mb_flow_implementation"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/flow_implementation"
        app:strokeColor="@color/purple_200" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mb_migration_from_shared"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/migration_from_shared"
        app:strokeColor="@color/purple_200" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mb_secured_datastore"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/secured_datastore"
        app:strokeColor="@color/purple_200" />

</LinearLayout>